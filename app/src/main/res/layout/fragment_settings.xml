<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?backgroundColor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?backgroundColor"
            android:orientation="vertical"
            android:padding="25dp">

            <ImageView
                android:id="@+id/button7"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_chevron_left" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"

                    android:background="@drawable/layout_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_hand_detection_confidence_threshold"
                            android:textColor="?android:textColor"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_hand_detection_confidence_threshold_desc"
                            android:textColor="?android:textColorSecondary"
                            android:textSize="8sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/detection_threshold_minus"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:backgroundTint="#00FFFFFF"
                            android:cropToPadding="true"
                            android:padding="-20dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/baseline_do_not_disturb_on_24"
                            android:tint="#40617A" />

                        <TextView
                            android:id="@+id/detection_threshold_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="0.5"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/detection_threshold_plus"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:backgroundTint="#00FFFFFF"
                            android:cropToPadding="true"
                            android:padding="-20dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/baseline_add_circle_24"
                            android:tint="#FF40617A" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/layout_bg"

                    android:backgroundTintMode="multiply"
                    android:baselineAligned="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_hand_tracking_confidence_threshold"
                            android:textColor="?android:textColor"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_hand_detection_tracking_threshold_desc"
                            android:textColor="?android:textColorSecondary"
                            android:textSize="8sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/tracking_threshold_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:backgroundTint="#00FFFFFF"
                            android:cropToPadding="true"
                            android:padding="-20dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/baseline_do_not_disturb_on_24"
                            android:tint="#40617A" />

                        <TextView
                            android:id="@+id/tracking_threshold_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="0.5"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/tracking_threshold_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:backgroundTint="#00FFFFFF"
                            android:cropToPadding="true"
                            android:padding="-20dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/baseline_add_circle_24"
                            android:tint="#FF40617A" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/layout_bg"

                    android:backgroundTintMode="multiply"
                    android:baselineAligned="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_hand_presence_confidence_threshold"
                            android:textColor="?android:textColor"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_hand_detection_presence_threshold_desc"
                            android:textColor="?android:textColorSecondary"
                            android:textSize="8sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/presence_threshold_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:backgroundTint="#00FFFFFF"
                            android:cropToPadding="true"
                            android:padding="-20dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/baseline_do_not_disturb_on_24"
                            android:tint="#40617A" />

                        <TextView
                            android:id="@+id/presence_threshold_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="0.5"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/presence_threshold_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:backgroundTint="#00FFFFFF"
                            android:cropToPadding="true"
                            android:padding="-20dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/baseline_add_circle_24"
                            android:tint="#FF40617A" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/layout_bg"

                    android:backgroundTintMode="multiply"
                    android:baselineAligned="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_hand_confidence_threshold"
                            android:textColor="?android:textColor"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_hand_confidence_threshold_desc"
                            android:textColor="?android:textColorSecondary"
                            android:textSize="8sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/confidence_threshold_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:backgroundTint="#00FFFFFF"
                            android:cropToPadding="true"
                            android:padding="-20dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/baseline_do_not_disturb_on_24"
                            android:tint="#40617A" />

                        <TextView
                            android:id="@+id/confidence_threshold_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="0.5"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/confidence_threshold_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:backgroundTint="#00FFFFFF"
                            android:cropToPadding="true"
                            android:padding="-20dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/baseline_add_circle_24"
                            android:tint="#FF40617A" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"

                    android:background="@drawable/layout_bg"
                    android:backgroundTintMode="multiply"
                    android:baselineAligned="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:id="@+id/advanced_settings_but"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/advanced_settings"
                            android:textColor="?android:textColor"
                            android:textSize="16sp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/advanced_settings_chevron"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:adjustViewBounds="false"
                            android:backgroundTint="#00FFFFFF"
                            android:cropToPadding="false"
                            android:rotation="180"
                            android:scaleType="center"
                            android:src="@drawable/ic_chevron_left" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/advanced_settings_row"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="?colorOnTertiaryContainer" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"

                            android:baselineAligned="true"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/hand_stable_duration"
                                    android:textColor="?android:textColor"
                                    android:textSize="18sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_hand_confidence_threshold_desc"
                                    android:textColor="?android:textColorSecondary"
                                    android:textSize="8sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:id="@+id/hand_stable_duration_minus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:backgroundTint="#00FFFFFF"
                                    android:cropToPadding="true"
                                    android:padding="-20dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/baseline_do_not_disturb_on_24"
                                    android:tint="#40617A" />

                                <TextView
                                    android:id="@+id/hand_stable_duration_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:text="0.5"
                                    android:textSize="16sp" />

                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:id="@+id/hand_stable_duration_plus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:backgroundTint="#00FFFFFF"
                                    android:cropToPadding="true"
                                    android:padding="-20dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/baseline_add_circle_24"
                                    android:tint="#FF40617A" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="?colorOnTertiaryContainer" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"

                            android:baselineAligned="true"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_duration"
                                    android:textColor="?android:textColor"
                                    android:textSize="18sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_hand_confidence_threshold_desc"
                                    android:textColor="?android:textColorSecondary"
                                    android:textSize="8sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:id="@+id/labelDurationMinus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:backgroundTint="#00FFFFFF"
                                    android:cropToPadding="true"
                                    android:padding="-20dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/baseline_do_not_disturb_on_24"
                                    android:tint="#40617A" />

                                <TextView
                                    android:id="@+id/labelDurationValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:text="0.5"
                                    android:textSize="16sp" />

                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:id="@+id/labelDurationPlus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:backgroundTint="#00FFFFFF"
                                    android:cropToPadding="true"
                                    android:padding="-20dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/baseline_add_circle_24"
                                    android:tint="#FF40617A" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="?colorOnTertiaryContainer" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="true"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_delegate"
                                    android:textSize="@dimen/bottom_sheet_text_size" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Set the CPU or GPU"
                                    android:textColor="?android:textColorSecondary"
                                    android:textSize="8sp" />
                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spinner_delegate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:animateLayoutChanges="true"
                                android:clipChildren="true"
                                android:dropDownWidth="match_parent"
                                android:entries="@array/delegate_spinner_titles"
                                android:fitsSystemWindows="true"
                                android:minWidth="@dimen/bottom_sheet_spinner_delegate_min_width"
                                android:spinnerMode="dropdown"
                                android:theme="@style/BottomSheetSpinnerItemStyle" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="?colorOnTertiaryContainer" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="true"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/hand_coordinate"
                                    android:textSize="@dimen/bottom_sheet_text_size" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Set to Bounding if causing lags"
                                    android:textColor="?android:textColorSecondary"
                                    android:textSize="8sp" />
                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spinner_hand_coordinate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:entries="@array/hand_coordinate_spinner_titles"
                                android:minWidth="@dimen/bottom_sheet_spinner_delegate_min_width"
                                android:spinnerMode="dropdown"
                                android:theme="@style/BottomSheetSpinnerItemStyle" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <!-- Delegate selection row -->
        </LinearLayout>

    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>